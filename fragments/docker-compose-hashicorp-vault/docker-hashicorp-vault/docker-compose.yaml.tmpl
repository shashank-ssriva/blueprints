version: "2.2"

services:
  vault:
    container_name: xebialabs-vault
    build: vault
    environment:
      VAULT_DEV_ROOT_TOKEN_ID: {{ .DockerHashiCorpRootToken }}
      VAULT_TOKEN: {{ .DockerHashiCorpRootToken }}
      VAULT_ADDR: 'http://0.0.0.0:8200'
    healthcheck:
      test: /bin/sh provision.sh

networks:
  default:
    external:
      name: xebialabs
